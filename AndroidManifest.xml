<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.htl3r.schoolplanner" android:versionCode="20"
	android:versionName="2.0alpha">
	
	<application android:icon="@drawable/ic_class"
		android:label="@string/app_name" android:name=".SchoolPlannerApp"
		style="@style/background_layout">
		
		<activity android:name=".gui.WelcomeScreen" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".gui.SelectScreen" android:theme="@android:style/Theme.NoTitleBar" android:configChanges="orientation" />
		<activity android:name=".gui.settings.SettingsScreen" android:theme="@android:style/Theme.NoTitleBar" />
		
		<activity android:name=".gui.basti.ViewBasti" android:theme="@android:style/Theme.NoTitleBar" />
		<activity android:name=".gui.chris.ViewChris" android:theme="@android:style/Theme.NoTitleBar" />
	</application>


	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7"></uses-sdk>
</manifest> 
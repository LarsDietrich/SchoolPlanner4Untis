<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:gravity="center"
    style="@style/background_layout"
    >
    
    <!-- row one --> 
	<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/selectScreenRow"
    >
    
    <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/selectScreenBox"
    android:id="@+id/selectScreen_boxClass"
    >
    <ImageView
    xmlxmlns="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectScreen_imageClass"
    style="@style/selectScreenBoxImage"
    android:src="@drawable/ic_class" />
    <View style="@style/statusBarDelimiter" />
    <Spinner
    android:id="@+id/selectScreen_spinnerClass"
    style="@style/selectScreenBoxSpinner"
    />
    </LinearLayout>
    
    <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/selectScreenBox"
    >
    <ImageView
    xmlxmlns="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectScreen_imageTeacher"
    style="@style/selectScreenBoxImage"
    android:src="@drawable/ic_teacher" />
    <View style="@style/statusBarDelimiter" />
    <Spinner
    android:id="@+id/selectScreen_spinnerTeacher"
    style="@style/selectScreenBoxSpinner"
    />
    </LinearLayout>
    
    </LinearLayout>
    
    <!-- row two -->
    <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/selectScreenRow"
    >
    
    <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/selectScreenBox"
    >
    <ImageView
    xmlxmlns="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectScreen_imageRoom"
    style="@style/selectScreenBoxImage"
    android:src="@drawable/ic_door" />
    <View style="@style/statusBarDelimiter" />
	<Spinner
	android:id="@+id/selectScreen_spinnerRoom"
    style="@style/selectScreenBoxSpinner"
    />
    </LinearLayout>
    
    <LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/selectScreenBox"
    >
    <ImageView 
    xmlxmlns="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectScreen_imageSubject"
    style="@style/selectScreenBoxImage"
    android:src="@drawable/ic_subject" />
    <View style="@style/statusBarDelimiter" />
	<Spinner
	android:id="@+id/selectScreen_spinnerSubject"
    style="@style/selectScreenBoxSpinner"
    />
    </LinearLayout>
    
    </LinearLayout>
    
    
</LinearLayout>
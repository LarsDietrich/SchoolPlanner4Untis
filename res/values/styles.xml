	<style name="selectScreenRow">
		<item name="android:orientation">horizontal</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
	</style>
 -->
	
	<style name="selectScreenBox">
		<item name="android:orientation">vertical</item> 
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/border</item>
    	<item name="android:gravity">center</item>
	</style>
	
	<style name="selectScreenBoxImage">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:clickable">true</item>
     	<item name="android:paddingBottom">25dip</item>
    	<item name="android:paddingLeft">25dip</item>
    	<item name="android:paddingRight">25dip</item>
    	<item name="android:paddingTop">25dip</item> 
	</style>
	
	<style name="selectScreenBoxSpinner">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="selectScreenHeader">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">26dip</item>
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">16sp</item>
    	<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>
	
	<style name="info_dialog_head">
		<item name="android:textSize">30sp</item>
		<item name="android:paddingBottom">20dip</item>
	</style>
	
	<style name="info_dialog_head_land">
		<item name="android:textSize">30sp</item>
		<item name="android:paddingBottom">5dip</item>
	</style>
	
	<style name="info_dialog_text">
		<item name="android:textSize">15sp</item>
    	<item name="android:paddingLeft">5dip</item>
    	<item name="android:paddingTop">5dip</item>
    	<item name="android:paddingBottom">5dip</item>
	</style>

	<style name="info_dialog_text_land">
		<item name="android:textSize">15sp</item>
    	<item name="android:paddingLeft">5dip</item>
    	<item name="android:paddingTop">0dip</item>
    	<item name="android:paddingBottom">0dip</item>
	</style>
</resources>
